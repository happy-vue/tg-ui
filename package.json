{
  "name": "tg-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "pnpm -C examples dev",
    "build": "gulp --require sucrase/register/ts -f build/gulpfile.ts",
    "preview": "vite preview",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "docs:serve": "pnpm -C docs serve",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.json --max-warnings 0 --fix",
    "lint:fix": "lint-staged",
    "plop:cmp": "pnpm -C packages/plop component",
    "plop:api": "pnpm -C packages/plop api",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tg-ui/components": "workspace:*",
    "@tg-ui/theme-chalk": "workspace:*",
    "@tg-ui/utils": "workspace:*",
    "@vueuse/core": "^8.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.2.0",
    "@types/gulp": "^4.0.9",
    "@types/gulp-autoprefixer": "^0.0.33",
    "@types/gulp-clean-css": "^4.3.0",
    "@types/gulp-sass": "^5.0.0",
    "@types/sass": "^1.43.1",
    "@vue/compiler-sfc": "^3.2.32",
    "@vue/tsconfig": "^0.1.3",
    "@zgsgs/eslint-config": "^0.0.6",
    "chalk": "^5.0.1",
    "clipboard-copy": "^4.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "fast-glob": "^3.2.11",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-sass": "^5.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "plop": "^3.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.49.11",
    "sucrase": "^3.20.3",
    "ts-morph": "^14.0.0",
    "typescript": "^4.5.4",
    "vue": "^3.2.25",
    "vue-tsc": "^0.29.8"
  },
  "lint-staged": {
    "*.{vue,js,jsx,ts,tsx,json}": "eslint --fix"
  }
}
